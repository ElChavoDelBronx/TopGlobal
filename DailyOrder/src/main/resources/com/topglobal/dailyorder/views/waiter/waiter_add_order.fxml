<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.topglobal.dailyorder.controllers.waiter.WaiterAddOrder"
      prefHeight="400.0" prefWidth="600.0" stylesheets="@../../stylesheets/sidebar.css" spacing="10">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <Label text="Añadir Nueva Orden" styleClass="h1"/>
    <VBox>
        <Label text="Número de Orden:" styleClass="h2"/>
        <TextField fx:id="tfOrderNumber" promptText="Ej.10"/>
    </VBox>
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="btnCancel" text="Cancelar" onAction="#onCancel" styleClass="normal-button"/>
        <Button fx:id="btnAddOrder" text="Guardar Orden" onAction="#onAddOrder" styleClass="normal-button"/>
    </HBox>
</VBox>
