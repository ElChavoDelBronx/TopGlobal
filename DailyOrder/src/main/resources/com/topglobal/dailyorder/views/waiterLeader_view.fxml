                <Label text="Lider12Mesas"
                       style="-fx-font-size:20px;"/>

                <Label text="Teléfono:"
                       style="-fx-font-size:24px; -fx-font-weight:bold;"/>
                <Label text="777‑882‑4646"
                       style="-fx-font-size:20px;"/>

                <Label text="Correo Electrónico:"
                       style="-fx-font-size:24px; -fx-font-weight:bold;"/>
                <Label text="jose.madero@gmail.com"
                       style="-fx-font-size:20px;"/>

                <Label text="Turno Actual:"
                       style="-fx-font-size:24px; -fx-font-weight:bold;"/>
                <Label text="Matutino"
                       style="-fx-font-size:20px;"/>
            </VBox>

            <StackPane>
                <VBox
                        translateX="100"
                        style="-fx-background-color: white;
                   -fx-padding: 50 70 50 70;
                   -fx-border-radius: 20;
                   -fx-background-radius: 20;
                   -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 0);"
                        spacing="50"
                        alignment="CENTER"
                        maxWidth="850"
                        maxHeight="750"
                        prefWidth="800"
                        prefHeight="750">

                    <Label text="Checador" alignment="TOP_LEFT" style="-fx-font-size: 36px; -fx-font-weight: bold;"/>

                    <Button text="Marcar Entrada"
                            style="-fx-font-size: 24px; -fx-pref-width: 450;  -fx-pref-height: 50;"/>
                    <Button text="Marcar Descanso"
                            style="-fx-font-size: 24px; -fx-pref-width: 450; -fx-pref-height: 50;"/>
                    <Button text="Marcar Salida"
                            style="-fx-font-size: 24px; -fx-pref-width: 450; -fx-pref-height: 50;"/>

                    <Label text="Accesos Rápidos" style="-fx-font-size: 36px; -fx-font-weight: bold;"/>

                    <Button text="Crear Planificación"
                            style="-fx-font-size: 24px; -fx-pref-width: 450; -fx-pref-height: 50;"/>
                </VBox>
            </StackPane>

        </HBox>
