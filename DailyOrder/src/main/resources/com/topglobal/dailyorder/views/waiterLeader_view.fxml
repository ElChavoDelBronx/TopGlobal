                        style="-fx-background-radius:8; -fx-pref-height:50; -fx-pref-width:50;"/>
                <Button text="📄"
                        style="-fx-background-radius:8; -fx-pref-height:50; -fx-pref-width:50;"/>
                <Region VBox.vgrow="ALWAYS"/>
                <Button text="⋯"
                        style="-fx-background-radius:8; -fx-pref-height:50; -fx-pref-width:50;"/>
            </VBox>

            <!-- DATOS DE USUARIO -->
            <VBox spacing="20" alignment="TOP_LEFT"
                  prefWidth="300"
                  style="-fx-padding:20 0 0 0;">
                <Label text="Menú principal"
                       style="-fx-font-size:40px; -fx-font-weight:bold;"/>
                <Label text="Hola, Bienvenido!"
                       style="-fx-font-size:36px;"/>
                <Label text="Jose Madero"
                       style="-fx-font-size:24px; -fx-font-weight:bold;"/>
                <Label text="Líder de Meseros"
                       style="-fx-font-size:20px;"/>

                <Region prefHeight="20"/>

                <Label text="Usuario:"
