<?xml version="1.0" encoding="UTF-8"?>

        <?import java.lang.*?>
        <?import java.util.*?>
        <?import javafx.scene.*?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.topglobal.dailyorder.controllers.leader.PlanificationLeaderController"
            style="-fx-background-color: #f4f8fc;">

    <!-- PORQUERIA IZQUIERDA -->
    <left>
        <VBox spacing="30" alignment="TOP_CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button text="🏠"/>
            <Button text="👤"/>
            <Button text="🍽"/>
            <Button text="..."/>
        </VBox>
    </left>

    <!-- PORQUERIA DERECHA -->
    <center>
        <StackPane>
            <VBox
                    translateX="100"
                    style="-fx-background-color: white;
                   -fx-padding: 50 70 50 70;
                   -fx-border-radius: 20;
                   -fx-background-radius: 20;
                   -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 0);"
                    spacing="50"
                    alignment="CENTER"
                    maxWidth="850"
                    maxHeight="750"
                    prefWidth="800"
                    prefHeight="750">

                <Label text="Checador" alignment="TOP_LEFT" style="-fx-font-size: 36px; -fx-font-weight: bold;"/>

                <Button text="Marcar Entrada"
                        style="-fx-font-size: 24px; -fx-pref-width: 450;  -fx-pref-height: 50;"/>
                <Button text="Marcar Descanso"
                        style="-fx-font-size: 24px; -fx-pref-width: 450; -fx-pref-height: 50;"/>
                <Button text="Marcar Salida"
                        style="-fx-font-size: 24px; -fx-pref-width: 450; -fx-pref-height: 50;"/>

                <Label text="Accesos Rápidos" style="-fx-font-size: 36px; -fx-font-weight: bold;"/>

                <Button text="Crear Planificación"
                        style="-fx-font-size: 24px; -fx-pref-width: 450; -fx-pref-height: 50;"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
