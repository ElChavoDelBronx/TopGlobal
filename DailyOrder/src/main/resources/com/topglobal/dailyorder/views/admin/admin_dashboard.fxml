<?xml version="1.0" encoding="UTF-8"?>

<!-- dashboard.fxml -->
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@../../stylesheets/dashboard.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.topglobal.dailyorder.controllers.admin.DashboardController">

    <!-- Parte superior -->
    <top>
        <VBox alignment="TOP_LEFT" spacing="20">

            <!-- Título -->
            <Label styleClass="h1"
                   text="Dashboard Administrativo" />

            <!-- Tarjetas superiores -->
            <HBox alignment="TOP_CENTER" spacing="20">

                <!-- Tarjeta: Ventas del Día -->
                <StackPane styleClass="card-blue">
                    <Label text="Ventas del Día"
                           styleClass="card-title"
                           textFill="WHITE"
                           StackPane.alignment="CENTER"
                           translateY="-10" />
                    <Label text="1,234.50"
                           styleClass="card-value"
                           textFill="WHITE"
                           StackPane.alignment="BOTTOM_CENTER"
                           translateY="-10" />
                </StackPane>

                <!-- Tarjeta: Mesas Ocupadas -->
                <StackPane styleClass="card-pink">
                    <Label text="Mesas Ocupadas"
                           styleClass="card-title"
                           textFill="WHITE"
                           StackPane.alignment="CENTER"
                           translateY="-10" />
                    <Label text="12 / 20"
                           styleClass="card-value"
                           textFill="WHITE"
                           StackPane.alignment="BOTTOM_CENTER"
                           translateY="-10" />
                </StackPane>

                <!-- Tarjeta: Promedio Reseñas -->
                <StackPane styleClass="card-purple">
                    <Label text="Promedio Reseñas"
                           styleClass="card-title"
                           textFill="WHITE"
                           StackPane.alignment="CENTER"
                           translateY="-10" />
                    <Label text="4.8 ★"
                           styleClass="card-value"
                           textFill="WHITE"
                           StackPane.alignment="BOTTOM_CENTER"
                           translateY="-10" />
                </StackPane>

                <!-- Tarjeta: Personal Activo -->
                <StackPane styleClass="card-yellow">
                    <Label text="Personal Activo"
                           styleClass="card-title"
                           textFill="WHITE"
                           StackPane.alignment="CENTER"
                           translateY="-10" />
                    <Label text="18 / 25"
                           styleClass="card-value"
                           textFill="WHITE"
                           StackPane.alignment="BOTTOM_CENTER"
                           translateY="-10" />
                </StackPane>

            </HBox>
        </VBox>
    </top>

    <!-- Parte inferior -->
    <center>
        <HBox alignment="CENTER" spacing="20">

            <!-- Gráfico de Ventas -->
            <VBox alignment="TOP_LEFT"
                  spacing="5"
                  styleClass="card-large">

                <Label styleClass="h1"
                       text="Ventas por Categoría" />

                <BarChart fx:id="ventasChart"
                          prefWidth="760"
                          prefHeight="380">

                    <xAxis>
                        <CategoryAxis label="Categoría" />
                    </xAxis>

                    <yAxis>
                        <NumberAxis label="Ventas" />
                    </yAxis>
                </BarChart>
            </VBox>

            <!-- Tarjeta vacía para Últimas Reseñas -->
            <VBox alignment="TOP_LEFT"
                  spacing="5"
                  styleClass="card-large"
                  prefWidth="760">

                <Label text="Últimas Reseñas" />
                <!-- Contenido dinámico aquí -->
            </VBox>

        </HBox>
    </center>
</BorderPane>