<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.topglobal.dailyorder.controllers.waiter.WaiterController"
            prefHeight="500.0" prefWidth="800.0">

    <left>
        <VBox spacing="15" prefWidth="350" style="-fx-background-color: #e9f1f9;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Menú principal" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label text="Hola, Bienvenido!" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <Label text="Raul Jimenez" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="Mesero" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>

            <Label text="Usuario:" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblUsuario" text="MeseroChespi88"/>

            <Label text="Teléfono:" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblTelefono" text="777-876-5432"/>

            <Label text="Correo Electrónico:" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblCorreo" text="gutierritos@empresa.com"/>

            <Label text="Turno Actual:" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblTurno" text="Vespertino"/>
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="15" prefWidth="300"
              style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 10;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Checador" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

            <Button text="Marcar Entrada" onAction="#marcarEntrada"/>
            <Button text="Marcar Descanso" onAction="#marcarDescanso"/>
            <Button text="Marcar Salida" onAction="#marcarSalida"/>
        </VBox>
    </center>

</BorderPane>
